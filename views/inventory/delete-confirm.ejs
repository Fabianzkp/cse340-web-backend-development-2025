<% if (title) { %>
    <h1><%= title %></h1>
<% } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }); %>  <!-- Fixed closing tag -->
    </ul>
<% } %>

<p>CONFIRM DELETION - THE DELETE IS PERMANENT.</p>

<form action="/inv/delete/<%= inv_id %>" method="POST" class="form" id="deleteForm">
    
    <label for="inv_make">Make:</label><br>
    <input type="text" id="inv_make" name="inv_make" readonly value="<%= inv_make %>"><br><br>

    <label for="inv_model">Model:</label><br>
    <input type="text" id="inv_model" name="inv_model" readonly value="<%= inv_model %>"><br><br>

    <label for="inv_year">Year:</label><br>
    <input type="number" id="inv_year" name="inv_year" readonly value="<%= inv_year %>"><br><br>

    <label for="inv_price">Price:</label><br>
    <input type="number" id="inv_price" name="inv_price" readonly value="<%= inv_price %>"><br><br>

    <button type="submit" id="submit">Delete Vehicle</button>

    <input type="hidden" name="inv_id" value="<%= inv_id %>">
</form>
